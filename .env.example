# ==================================
# EduBaza.uz Platform - Environment Variables
# ==================================

# App Configuration
NODE_ENV=development
APP_URL=http://localhost:3000
APP_NAME="EduBaza.uz"

# Database (PostgreSQL)
DATABASE_URL="postgresql://edubaza:edubaza_dev_password@localhost:5432/edubaza_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=edubaza_redis_password
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=30d

# SMS OTP (Eskiz.uz)
ESKIZ_EMAIL=your-email@example.com
ESKIZ_PASSWORD=your-eskiz-password
ESKIZ_API_URL=https://notify.eskiz.uz/api

# AI Generation (Google Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# Payments - Click.uz
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SERVICE_ID=your-click-service-id
CLICK_SECRET_KEY=your-click-secret-key
CLICK_API_URL=https://api.click.uz/v2

# Payments - Payme.uz
PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key
PAYME_API_URL=https://checkout.paycom.uz/api

# File Storage
PDF_STORAGE_PATH=./public/worksheets
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Session
SESSION_SECRET=your-session-secret-change-in-production

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://edubaza.uz

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PAYMENTS=true
ENABLE_AI_GENERATION=true

# Subscription Plans Limits (JSON format)
# FREE_PLAN_LIMITS={"worksheetsPerMonth":10,"templatesAccess":3,"taskTypesAccess":15}
# PRO_PLAN_LIMITS={"worksheetsPerMonth":100,"templatesAccess":10,"taskTypesAccess":30}
# SCHOOL_PLAN_LIMITS={"worksheetsPerMonth":-1,"templatesAccess":-1,"taskTypesAccess":-1}

# Email (optional - for future)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@edubaza.uz
